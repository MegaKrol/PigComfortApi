{
  "name": "pig-farm/api",
  "description": "Pig Farm advisory API that proxies Open-Meteo and returns filtered JSON.",
  "type": "project",
  "require": {
    "php": "^8.2",
    "vlucas/phpdotenv": "^5.6",
    "guzzlehttp/guzzle": "^7.9"
  },
  "autoload": {
    "psr-4": {
      "PigFarm\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public public/index.php",
    "post-autoload-dump": [
      "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) copy('.env.example', '.env');\""
    ]
  }
}
